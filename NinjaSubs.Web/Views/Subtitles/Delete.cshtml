@model DeleteSubtitlesViewModel

@{
    ViewData["Title"] = $"Are you sure you want to delete {Model.Title}";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-8">
        <form asp-action="ConfirmDelete" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control " readonly />
            </div>
            <button type="submit" class="btn btn-danger">Delete Subs</button>
        </form>
    </div>
</div>

