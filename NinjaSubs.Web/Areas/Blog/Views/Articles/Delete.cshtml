@model DeleteArticleViewModel

@{
    ViewData["Title"] = $"Delete Article - {Model.Title}";
}

<h1 class="text-center" style="padding:30px">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col col-md-8 mr-auto ml-auto">
            <form asp-action="ConfirmDelete" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control " readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    @Html.Raw(Model.Content)
                </div>
                <div class="text-center"><button type="submit" class="btn btn-danger">Delete Article</button></div>
            </form>
        </div>
    </div>
</div>
